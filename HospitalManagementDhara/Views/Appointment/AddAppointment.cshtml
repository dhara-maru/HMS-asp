<div id="app">
    <section class="section">
        <h4 class="text-center m-4">Add New Appointment</h4>

        <div class="container-fluid px-3">
            <div class="card">
                <div class="card-header m-3">
                    <h4>Appointment Details</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="frist_name">Appointment Date & Time</label>
                            <input id="frist_name" type="date" class="form-control" name="frist_name" autofocus>
                        </div>
                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="last_name">Department</label>
                            <div class="dropdown w-100">
                                <button class="btn border border-2 border-black dropdown-toggle w-100 text-start" type="button"
                                        id="dropdownMenuButtonDept" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Select Department
                                </button>
                                <div class="dropdown-menu w-100">
                                    <a class="dropdown-item" href="#">D. A</a>
                                    <a class="dropdown-item" href="#">D. B</a>
                                    <a class="dropdown-item" href="#">D. C</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="last_name">Doctor</label>
                            <div class="dropdown w-100">
                                <button class="btn border border-2 border-black dropdown-toggle w-100 text-start" type="button"
                                        id="dropdownMenuButtonDoc" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Select Doctor
                                </button>
                                <div class="dropdown-menu w-100">
                                    <a class="dropdown-item" href="#">D. A</a>
                                    <a class="dropdown-item" href="#">D. B</a>
                                    <a class="dropdown-item" href="#">D. C</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="last_name">Patient</label>
                            <div class="dropdown w-100">
                                <button class="btn border border-2 border-black dropdown-toggle w-100 text-start" type="button"
                                        id="dropdownMenuButtonPat" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Select Patient
                                </button>
                                <div class="dropdown-menu w-100">
                                    <a class="dropdown-item" href="#">D. A</a>
                                    <a class="dropdown-item" href="#">D. B</a>
                                    <a class="dropdown-item" href="#">D. C</a>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="last_name">Status</label>
                            <div class="dropdown w-100">
                                <button class="btn border border-2 border-black dropdown-toggle w-100 text-start" type="button"
                                        id="dropdownMenuButtonPat" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Select Status
                                </button>
                                <div class="dropdown-menu w-100">
                                    <a class="dropdown-item" href="#">Pending</a>
                                    <a class="dropdown-item" href="#">Approved</a>
                                    <a class="dropdown-item" href="#">Visited</a>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="row">

                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="last_name">Description</label>
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group col-12 col-md-6 col-lg-4">
                            <label for="last_name">Special Remarks</label>
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Footer Buttons -->
                <div class="card-footer text-right">
                    <button class="btn btn-primary mr-1" type="submit">Save</button>
                    <button class="btn btn-secondary" type="reset">Cancel</button>
                </div>
            </div>
        </div>
    </section>
</div>
