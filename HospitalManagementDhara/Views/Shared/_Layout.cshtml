<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalManagementDhara</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/assets/css/app.min.css" asp-append-version="true">
  <!-- Template CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/components.css" asp-append-version="true">
  <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/assets/css/custom.css" asp-append-version="true">
  <link rel='shortcut icon' type='image/x-icon' href='~/assets/img/favicon.ico' />



    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalManagementDhara.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="loader"></div>


    <div id="app">
        <div class="main-wrapper main-wrapper-1">

            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar sticky">
                <div class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">

                        @* sidebar menu  *@
                        <li>
                            <a href="#" data-toggle="sidebar" class="nav-link nav-link-lg
									collapse-btn" style="color:black !important;"> <i data-feather="align-justify"></i></a>
                        </li>
                       
                        </ul>
                    <ul class="navbar-nav navbar-right">
                        @* auth  *@
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown"
                               class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                <img alt="image" src="~/assets/img/user.png"
                                     class="user-img-radious-style"> <span class="d-sm-none d-lg-inline-block"></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right pullDown">
                                <div class="dropdown-title">Hello Sarah Smith</div>
                                <a href="profile.html" class="dropdown-item has-icon">
                                    <i class="far
										fa-user"></i> Admin
                                </a> 
                                <a asp-controller="Home" asp-action="Login" class="dropdown-item has-icon">
                                    <i class="fas fa-bolt"></i>
                                    Login
                                </a> 
                                <a asp-controller="Home" asp-action="Signup" class="dropdown-item has-icon">
                                    <i class="fas fa-bolt"></i>
                                    Sign Up
                                </a>
                                <div class="dropdown-divider"></div>
                                <a asp-controller="Home" asp-action="Logout" class="dropdown-item has-icon text-danger">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>
                </div>
          
            </nav>

            @* sidebar  ====================================== *@
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a asp-action="Index" asp-controller="Home">
                            <img alt="image" src="~/assets/img/logo.png" class="header-logo" /> <span class="logo-name">HealWell</span>
                        </a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Menu</li>
                        <li class="dropdown active">
                            <a asp-controller="Home" asp-action="Index" class="nav-link"><i data-feather="monitor"></i><span>Dashboard</span></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="menu-toggle nav-link has-dropdown">
                                <i data-feather="users"></i><span>Doctors</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-controller="Doctor" asp-action="DoctorList">Doctor List</a></li>
                                <li><a class="nav-link" asp-controller="Doctor" asp-action="AddDoctor">Add Doctor</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="menu-toggle nav-link has-dropdown">
                                <i data-feather="folder-plus"></i><span>Departments</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-controller="Department" asp-action="DepartmentList">Department List</a></li>
                                <li><a class="nav-link" asp-controller="Department" asp-action="AddDepartment">Add Department</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="menu-toggle nav-link has-dropdown">
                                <i data-feather="user-plus"></i><span>Patients</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-controller="Patient" asp-action="PatientList">Patient List</a></li>
                                <li><a class="nav-link" asp-controller="Patient" asp-action="AddPatient">Add Patient</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="menu-toggle nav-link has-dropdown">
                                <i data-feather="briefcase"></i><span>Doctor Departments</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-controller="Doctor" asp-action="DoctorDepartmentList">Doctor Department List</a></li>
                                <li><a class="nav-link" asp-controller="Doctor" asp-action="AddDoctorDepartment">Add Doctor Department</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="menu-toggle nav-link has-dropdown">
                                <i data-feather="clipboard"></i><span>Appointments</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-controller="Appointment" asp-action="AppointmentList">Appointments List</a></li>
                                <li><a class="nav-link" asp-controller="Appointment" asp-action="AddAppointment">Add Appointment</a></li>
                            </ul>
                        </li>
                    </ul>
                </aside>
            </div>


            <div class="main-content">
                <section class="section">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </section>
    </div>

            <footer class="main-footer">
                <div class="footer-left">
                    <p>HealWell HMS</p>
                </div>
                <div class="footer-right">
                </div>
            </footer>

    </div>
    </div>


    @* <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script> *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@

    <!-- General JS Scripts -->
    <script src="~/assets/js/app.min.js" asp-append-version="true"></script>
  <!-- JS Libraies -->
    <script src="~/assets/bundles/apexcharts/apexcharts.min.js" asp-append-version="true"></script>
  <!-- Page Specific JS File -->
    <script src="~/assets/js/page/index.js" asp-append-version="true"></script>
  <!-- Template JS File -->
    <script src="~/assets/js/scripts.js" asp-append-version="true"></script>
  <!-- Custom JS File -->
    <script src="~/assets/js/custom.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
