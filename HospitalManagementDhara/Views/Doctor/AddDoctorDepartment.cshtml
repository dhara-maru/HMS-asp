<div id="app">
    <section class="section">
        <h4 class="text-center m-4">Add Doctor Department</h4>

        <div class="col-12 col-md-6 col-lg-12">
            <div class="card">
                <div class="card-header m-3">
                    <h4>Doctor Department Information</h4>
                </div>

                <div class="card-body">
                   
                    <div class="form-group">
                        <label>Doctor Name</label><br />
                        <div class="dropdown w-100">
                            <button class="btn border border-2 border-black dropdown-toggle w-100 text-start" type="button"
                                    id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Select Doctor
                            </button>
                            <div class="dropdown-menu w-100">
                                <a class="dropdown-item" href="#">Dr. A</a>
                                <a class="dropdown-item" href="#">Dr. B</a>
                                <a class="dropdown-item" href="#">Dr. C</a>
                            </div>
                        </div>
                    </div>

                    <!-- Departments Checkboxes -->
                    <div class="form-group">
                        <label>Departments</label>
                        <div class="d-flex flex-wrap gap-3">
                            <div class="pretty p-default p-fill me-3">
                                <input type="checkbox" />
                                <div class="state p-primary">
                                    <label>Neurology</label>
                                </div>
                            </div>
                            <div class="pretty p-default p-fill me-3">
                                <input type="checkbox" />
                                <div class="state p-primary">
                                    <label>Cardiology</label>
                                </div>
                            </div>
                            <div class="pretty p-default p-fill me-3">
                                <input type="checkbox" />
                                <div class="state p-primary">
                                    <label>Orthopedics</label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Footer Buttons -->
                <div class="card-footer text-right">
                    <button class="btn btn-primary mr-1" type="submit">Save</button>
                    <button class="btn btn-secondary" type="reset">Cancel</button>
                </div>
            </div>
        </div>
    </section>
</div>
